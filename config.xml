<?xml version="1.0" standalone="no" ?>

<ImageProcessors>
	<ImageProcessor name="ModuleDeTest">
		<parameter id="0" name="input" type="usbcam">MyCam1</parameter>
		<parameter id="2" name="module" type="SlitCamera">SlitCamera1</parameter>
	</ImageProcessor>
        
	<ImageProcessor name="ModuleDeTest2">
                <parameter id="0" name="input" type="usbcam">MyCam1</parameter>
                <parameter id="2" name="module" type="ObjectTracker">ObjectTracker1</parameter>
        </ImageProcessor>
</ImageProcessors>


<Manager>
	<parameter id="1" name="mode">benchmarkAA</parameter>
        <parameter id="2" name="width">320</parameter>
	<parameter id="3" name="height">240</parameter>
        <parameter id="4" name="depth">8</parameter>
        <parameter id="5" name="channels">3</parameter>
</Manager>

<!-- List all possibly used inputs-->
<Input name="MyCam1">
        <parameter id="0" name="source">cam</parameter>
</Input>

