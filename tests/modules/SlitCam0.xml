<module name="SlitCam0" description="A simple example module that mimics a slit camera (or linear camera). The camera input is a range of pixels in the middle of the image.">
	<parameters>
		<param name="auto_process">
			<type>bool</type>
			<value default='0' range='[0:1]'>0</value>
			<description>If yes the module processes with a timer at fixed fps, if no the module processes based on the time stamp of the input stream</description>
		</param>
		<param name="fps">
			<type>double</type>
			<value default='0' range='[0:1000]'>0</value>
			<description>Frames per seconds (processing speed)</description>
		</param>
		<param name="class">
			<type>string</type>
			<value default='' range='[]'></value>
			<description>Class of the module (define the module's function)</description>
		</param>
		<param name="master">
			<type>string</type>
			<value default='' range='[]'></value>
			<description>Master module on which this module's processing is dependent. If empty, use all preceeding modules</description>
		</param>
		<param name="width">
			<type>int</type>
			<value default='640' range='[20:6400]'>640</value>
			<description>Width of the input</description>
		</param>
		<param name="height">
			<type>int</type>
			<value default='480' range='[20:4800]'>480</value>
			<description>Height of the input</description>
		</param>
		<param name="type">
			<type>imageType</type>
			<value default='CV_8UC3' range='[CV_16SC1,CV_16SC2,CV_16SC3,CV_16SC4,CV_16UC1,CV_16UC2,CV_16UC3,CV_16UC4,CV_32FC1,CV_32FC2,CV_32FC3,CV_32FC4,CV_32SC1,CV_32SC2,CV_32SC3,CV_32SC4,CV_64FC1,CV_64FC2,CV_64FC3,CV_64FC4,CV_8SC1,CV_8SC2,CV_8SC3,CV_8SC4,CV_8UC1,CV_8UC2,CV_8UC3]'>CV_8UC3</value>
			<description>Format of the input image</description>
		</param>
		<param name="cached">
			<type>cachedState</type>
			<value default='NO_CACHE' range='[DISABLED,NO_CACHE,READ_CACHE,WRITE_CACHE]'>NO_CACHE</value>
			<description>Format of the input image</description>
		</param>
		<param name="aperture">
			<type>int</type>
			<value default='1' range='[1:10]'>1</value>
			<description>Size of the aperture of the camera</description>
		</param>
	</parameters>
	<inputs>
		<input id="0">
			<type>Image</type>
			<name>input</name>
			<description>Video input</description>
		</input>
	</inputs>
	<outputs>
		<output id="0">
			<type>Image</type>
			<name>slit</name>
			<description>Slit camera stream</description>
		</output>
	</outputs>
</module>
