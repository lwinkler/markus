<?xml version="1.0" encoding="UTF-8"?>
<module name="BgrSubMOG" description="Perform background subtraction via Mixtures Of Gaussians (OpenCV MOG1)">
	<parameters>
		<param name="class">
			<type>string</type>
			<value default=""></value>
			<description>Class of the module (define the module's function)</description>
		</param>
		<param name="width">
			<type>int</type>
			<value min="1" max="6400" default="640">640</value>
			<description>Width of the input</description>
		</param>
		<param name="height">
			<type>int</type>
			<value min="1" max="4800" default="480">480</value>
			<description>Height of the input</description>
		</param>
		<param name="type">
			<type>imageType</type>
			<value default="CV_8UC1">CV_8UC1</value>
			<description>Format of the input image</description>
		</param>
		<param name="auto_process">
			<type>bool</type>
			<value min="0" max="1" default="0">0</value>
			<description>If yes the module processes with a timer at fixed fps, if no the module processes based on the time stamp of the input stream</description>
		</param>
		<param name="allow_unsync_input">
			<type>bool</type>
			<value min="0" max="1" default="0">0</value>
			<description>If yes the module accepts that its input can be on a different time stamp. Only relevant if the module has many inputs. Use at your own risks.</description>
		</param>
		<param name="fps">
			<type>double</type>
			<value min="0" max="1000" default="0">0</value>
			<description>Frames per seconds (processing speed)</description>
		</param>
		<param name="history">
			<type>int</type>
			<value min="1" max="10000" default="200">200</value>
			<description>Length of the history</description>
		</param>
		<param name="nmixtures">
			<type>int</type>
			<value min="1" max="10" default="5">5</value>
			<description>Number of Gaussian mixtures</description>
		</param>
		<param name="background_ratio">
			<type>double</type>
			<value min="0" max="1" default="0.7">0.7</value>
			<description>Background ratio</description>
		</param>
		<param name="noise_sigma">
			<type>double</type>
			<value min="0" max="1000" default="15">15</value>
			<description>noise strength</description>
		</param>
		<param name="learning_rate">
			<type>double</type>
			<value min="-1" max="1" default="-1">-1</value>
			<description>Learning rate of the model</description>
		</param>
	</parameters>
	<inputs>
		<input id="0">
			<type>Image</type>
			<name>input</name>
			<description>Video input</description>
		</input>
	</inputs>
	<outputs>
		<output id="0">
			<type>Image</type>
			<name>foreground</name>
			<description>Foreground</description>
		</output>
		<output id="1">
			<type>Image</type>
			<name>background</name>
			<description>Background</description>
		</output>
	</outputs>
</module>
