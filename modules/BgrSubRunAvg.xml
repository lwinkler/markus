<?xml version="1.0" encoding="UTF-8"?>
<module name="BgrSubRunAvg" description="Perform a background subtraction using a running average">
	<parameters>
		<param name="class">
			<type>string</type>
			<value default=""></value>
			<description>Class of the module (define the module's function)</description>
		</param>
		<param name="width">
			<type>int</type>
			<value min="1" max="6400" default="640">640</value>
			<description>Width of the input</description>
		</param>
		<param name="height">
			<type>int</type>
			<value min="1" max="4800" default="480">480</value>
			<description>Height of the input</description>
		</param>
		<param name="type">
			<type>image type</type>
			<value default="CV_32FC3">CV_32FC3</value>
			<description>Format of the input image</description>
		</param>
		<param name="auto_process">
			<type>bool</type>
			<value min="0" max="1" default="0">0</value>
			<description>If yes the module processes with a timer at fixed fps, if no the module processes based on the time stamp of the input stream</description>
		</param>
		<param name="fps">
			<type>double</type>
			<value min="0" max="1000" default="0">0</value>
			<description>Frames per seconds (processing speed)</description>
		</param>
		<param name="background_alpha">
			<type>float</type>
			<value min="0" max="1" default="0.02">0.02</value>
			<description>Defines the speed at which the background adapts</description>
		</param>
		<param name="foreground_thres">
			<type>float</type>
			<value min="0" max="1" default="0.2">0.2</value>
			<description>Threshold to accept a pixel as foreground</description>
		</param>
	</parameters>
	<inputs>
		<input id="0">
			<type>Image</type>
			<name>input</name>
			<description>Video input</description>
		</input>
	</inputs>
	<outputs>
		<output id="0">
			<type>Image</type>
			<name>foreground</name>
			<description>Foreground</description>
		</output>
		<output id="1">
			<type>Image</type>
			<name>background</name>
			<description>Background</description>
		</output>
	</outputs>
</module>
