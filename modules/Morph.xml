<?xml version="1.0" encoding="UTF-8"?>
<module name="Morph" description="Apply a morphological operator to an image">
	<parameters>
		<param name="class">
			<type>string</type>
			<value default="">Morph</value>
			<description>Class of the module (define the module's function)</description>
		</param>
		<param name="width">
			<type>int</type>
			<value min="1" max="6400" default="640">640</value>
			<description>Width of the input</description>
		</param>
		<param name="height">
			<type>int</type>
			<value min="1" max="4800" default="480">480</value>
			<description>Height of the input</description>
		</param>
		<param name="type">
			<type>imageType</type>
			<value default="CV_8UC1">CV_8UC1</value>
			<description>Format of the input image</description>
		</param>
		<param name="auto_process">
			<type>bool</type>
			<value min="0" max="1" default="0">0</value>
			<description>If yes the module processes with a timer at fixed fps, if no the module processes based on the time stamp of the input stream</description>
		</param>
		<param name="allow_unsync_input">
			<type>bool</type>
			<value min="0" max="1" default="0">0</value>
			<description>If yes the module accepts that its input can be on a different time stamp. Only relevant if the module has many inputs. Use at your own risks.</description>
		</param>
		<param name="fps">
			<type>double</type>
			<value min="0" max="1000" default="0">0</value>
			<description>Frames per seconds (processing speed)</description>
		</param>
		<param name="operator">
			<type>int</type>
			<value min="0" max="6" default="0">0</value>
			<description>Morphological operator: ERODE=0,DILATE=1,OPEN=2,CLOSE=3,GRADIENT=4,TOPHAT=5,BLACKHAT=6</description>
		</param>
		<param name="element">
			<type>int</type>
			<value min="0" max="2" default="2">2</value>
			<description>Morphological element: RECT=0, CROSS=1, ELLIPSE=2</description>
		</param>
		<param name="kernel_size">
			<type>int</type>
			<value min="3" max="30" default="5">5</value>
			<description>Size of the element</description>
		</param>
		<param name="iterations">
			<type>int</type>
			<value min="1" max="10" default="1">1</value>
			<description>Number of times the operation is applied to the image</description>
		</param>
	</parameters>
	<inputs>
		<input id="0">
			<type>Image</type>
			<name>input</name>
			<description>Video input</description>
		</input>
	</inputs>
	<outputs>
		<output id="0">
			<type>Image</type>
			<name>output</name>
			<description>Output</description>
		</output>
	</outputs>
</module>
