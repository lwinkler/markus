<?xml version="1.0" encoding="UTF-8"?>
<module name="SimpleTracker" description="Track any detect objects (from StreamObject).">
	<parameters>
		<param name="class">
			<type>string</type>
			<value default="">SimpleTracker</value>
			<description>Class of the module (define the module's function)</description>
		</param>
		<param name="width">
			<type>int</type>
			<value min="1" max="6400" default="640">640</value>
			<description>Width of the input</description>
		</param>
		<param name="height">
			<type>int</type>
			<value min="1" max="4800" default="480">480</value>
			<description>Height of the input</description>
		</param>
		<param name="type">
			<type>image type</type>
			<value default="CV_8UC1">CV_8UC1</value>
			<description>Format of the input image</description>
		</param>
		<param name="fps">
			<type>double</type>
			<value min="0" max="1000" default="10">10</value>
			<description>Frames per seconds (processing speed)</description>
		</param>
		<param name="maxMatchingDistance">
			<type>double</type>
			<value min="0" max="11200" default="100">100</value>
			<description>Tolerance of the tracker.</description>
		</param>
		<param name="maxNbFramesDisappearance">
			<type>int</type>
			<value min="1" max="1000" default="10">10</value>
			<description>Time before disappearence of an object</description>
		</param>
		<param name="symetricMatch">
			<type>bool</type>
			<value min="0" max="1" default="1">1</value>
			<description>Each match between objects and templates must be symetrical</description>
		</param>
		<param name="features">
			<type>string</type>
			<value default="x,y,width,height">x,y,width,height</value>
			<description>List of features to use for tracking (only scalar values, must be present in objects to track)</description>
		</param>
	</parameters>
	<inputs>
		<input id="0">
			<type>Objects</type>
			<name>input</name>
			<description>Input objects</description>
		</input>
	</inputs>
	<outputs>
		<output id="0">
			<type>Objects</type>
			<name>tracker</name>
			<description>Tracked objects</description>
		</output>
	</outputs>
</module>
